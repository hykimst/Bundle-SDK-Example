{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "esnext",
    "moduleResolution": "node",
    "target": "esnext",
    "noEmit": true,
    "noImplicitReturns": true,
    "noEmitOnError": true,
    "noUnusedLocals": false,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"]
  },
  "include": ["src/**/*.ts", "bundle/**/*.ts"],
  "exclude": ["node_modules"]
}